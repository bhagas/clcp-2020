<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Edit Data Indikasi Program</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/manajemen_indikasi_program">Data Indikasi Program</a></li>
        <li class="active">Edit Data</li>
      </ol>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-content">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <form role="form" action="/manajemen_indikasi_program/submit_edit" method="POST">
                <input type="hidden" class="form-control" id="" name="id" value="<%= data[0].id%>">
                <div class="form-group">
                  <label>Program Utama</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <input type="text" class="form-control" name="ip_utama" id="" value="<%= data[0].ip_utama%>">    
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Program</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <input type="text" class="form-control" name="program" id="" value="<%= data[0].program%>">    
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Kegiatan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <textarea name="keg" class="form-control"><%- data[0].keg%></textarea>     
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Lokasi</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                       <textarea name="lokasi" class="form-control" id="lokasi"><%- data[0].lokasi%></textarea> 
                      </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Waktu Pelaksanaan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                      <label>Tahun Awal</label>
                      <select class="form-control" name="tahun" id="" data-search="true">
                        <%for(var c = 2020; c <=2040; c++){%>
        					        <option value="<%=c%>" <%if(data[0].tahun==c){%> selected <%}%>><%=c%></option>
        					      <%}%>
                      </select>   
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                      <label>Tahun Akhir</label>
                      <select class="form-control" name="tahun_akhir" id="" data-search="true">
                        <%for(var c = 2020; c <=2040; c++){%>
        					        <option value="<%=c%>" <%if(data[0].tahun_akhir==c){%> selected <%}%>><%=c%></option>
        					      <%}%>
                      </select>   
                    </div>
                  </div>
                </div>

                 

                <!-- <div class="form-group">
                  <label>Realisasi Lokasi</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <input type="text" class="form-control" name="r_lokasi" id="" value="<%= data[0].r_lokasi%>">    
                    </div>
                  </div>
                </div> -->

                <div class="form-group">
                  <label>Sumber Dana</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <!-- <select class="form-control" name="sumber_dana" id="">
                        <option value="">-- Pilih --</option>
                        <option <% if(data[0].sumber_dana=='APBN'){%> selected<% }%>>APBN</option>
                        <option <% if(data[0].sumber_dana=='APBD Provinsi'){%> selected<% }%>>APBD Provinsi</option>
                        <option <% if(data[0].sumber_dana=='APBD Kabupaten'){%> selected<% }%>>APBD Kabupaten</option>
                      </select> -->
                      <input type="text" class="form-control" name="sumber_dana" id="" value="<%= data[0].sumber_dana%>">    
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Biaya (Rp)</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <input type="text" class="form-control" name="biaya" id="" value="<%= data[0].biaya%>">    
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Pelaksana</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                      <input type="text" class="form-control" name="pelaksana" id="" value="<%= data[0].pelaksana%>">    
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-embossed">Simpan Data</button>
              </form>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2017 </span>
        <span>Pemerintah Kabupaten Pekalongan</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

