<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Edit Data FAQ</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/manajemen_faq">Data FAQ</a></li>
        <li class="active">Edit Data</li>
      </ol>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-content">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <form role="form" action="/manajemen_faq/submit_edit" method="POST">
                <input type="hidden" class="form-control" id="" name="id" value="<%= data[0].id %>">
                <div class="form-group">
                  <label>Kategori</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <select class="form-control" name="id_kat" id="" data-search="true">
                      <% for(var i=0; i<data_kat.length; i++){ %>
                        <option value="<%= data_kat[i].id%>" <% if(data_kat[i].id==data[0].id_kat){%> selected <% }%>><%= data_kat[i].kategori%></option>
                      <% }%>
                      </select>  
                      </div>
                  </div>
                </div>
                
                <div class="form-group">
                  <label>Pertanyaan</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <textarea class="form-control" rows="3" name="pertanyaan" id="pertanyaan"><%- data[0].pertanyaan%></textarea>  
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Jawaban</label>
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <textarea class="form-control" rows="3" name="jawaban" id="jawaban"><%- data[0].jawaban%></textarea>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary btn-embossed">Simpan Data</button>
              </form>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2017 </span>
        <span>Pemerintah Kabupaten Pekalongan</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

