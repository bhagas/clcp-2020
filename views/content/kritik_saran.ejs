    	<script type="text/javascript">
      function detil (x) {
  $.get( "/manajemen_saran/get_json/"+x, function( data ) {
    console.log(data);
    $('#nama').empty();
    $('#nik').empty();
    $('#alamat').empty();
    $('#telp').empty();
    $('#email').empty();
    $('#koor').empty();
    $('#foto').empty();
    $('#pengaduan').empty();
    $('#tanggapan').empty();
    $('#linknya').empty();

    $('#nama').html(data.data[0].nama);
    $('#nik').html(data.data[0].nik);
    $('#alamat').html(data.data[0].alamat);
    $('#telp').html(data.data[0].telp);
    $('#email').html(data.data[0].email);
    $('#koor').html(data.data[0].x+','+data.data[0].y);
    $('#foto').html('<img src="/foto/'+data.data[0].foto+'" style="width:300px;">');
    $("#linknya").html('<a class="btn btn-success pull-right" href="http://maps.google.com/maps?q='+data.data[0].y+','+data.data[0].x+'" target="_blank" role="button">Link Ke Lokasi</a>')
    $('#pengaduan').html(data.data[0].pengaduan);
    $('#tanggapan').html(data.data[0].tanggapan);

    $('.modal_saran').modal('toggle');
    $('.modal_saran').modal('show');
  })
  }
  
